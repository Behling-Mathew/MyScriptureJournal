@page "{id:int}"
@model MyScriptureJournal.Pages.Scriptures.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Scripture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Scripture.ID" />
            <div class="form-group">
                <label asp-for="Scripture.Book" class="control-label"></label>
                <input asp-for="Scripture.Book" class="form-control" />
                <span asp-validation-for="Scripture.Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.NoteDate" class="control-label"></label>
                <input asp-for="Scripture.NoteDate" class="form-control" />
                <span asp-validation-for="Scripture.NoteDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.ScriptureReference" class="control-label"></label>
                <input asp-for="Scripture.ScriptureReference" class="form-control" />
                <span asp-validation-for="Scripture.ScriptureReference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.VerseContents" class="control-label"></label>
                <textarea asp-for="Scripture.VerseContents" class="form-control"></textarea>
                <span asp-validation-for="Scripture.VerseContents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Note" class="control-label"></label>
                <textarea asp-for="Scripture.Note" class="form-control cursive"></textarea>
                <span asp-validation-for="Scripture.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="back" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
